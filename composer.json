{
  "name": "drdynamic/plox",
  "type": "project",
  "description": "PHP implementation of a lox interpreter",
  "keywords": [
    "lox",
    "interpreter"
  ],
  "autoload": {
    "psr-4": {
      "src\\": "src/",
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "laravel/framework": "^11",
    "laravel/tinker": "^2.10"
  },
  "require-dev": {
    "pestphp/pest": "^2.30",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
